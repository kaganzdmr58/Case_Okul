@model IEnumerable<Okul.Models.Ogretmen>

@{
    ViewData["Title"] = "Index";
}

<h1>Öğretmenler</h1>

<p>
    <a asp-action="Create">Öğretmen Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OgretmenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OgretmenTcNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OgretmenDogumTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ders)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OgretmenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OgretmenTcNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OgretmenDogumTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ders.DersName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OgretmenID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OgretmenID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OgretmenID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
