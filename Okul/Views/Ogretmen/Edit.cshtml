@model Okul.Models.Ogretmen

@{
    ViewData["Title"] = "Edit";
}

<h4>Öğretmen Detayları Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OgretmenID" />
            <div class="form-group">
                <label asp-for="OgretmenName" class="control-label"></label>
                <input asp-for="OgretmenName" class="form-control" />
                <span asp-validation-for="OgretmenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OgretmenTcNo" class="control-label"></label>
                <input asp-for="OgretmenTcNo" class="form-control" />
                <span asp-validation-for="OgretmenTcNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OgretmenDogumTarih" class="control-label"></label>
                <input asp-for="OgretmenDogumTarih" type="date" class="form-control" />
                <span asp-validation-for="OgretmenDogumTarih" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DersID" class="control-label"></label>
                <select asp-for="DersID" class="form-control" asp-items="ViewBag.DersID"></select>
                <span asp-validation-for="DersID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
